<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/backgroud"
  android:orientation="vertical">
	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_header_bg2">
   		<Button 
    		android:background="@drawable/common_titlebar_back_btn_normal" 
    		android:layout_marginLeft="8.0dip" 
    		android:text="返回" 
    		android:textSize="17.0dip"
    		android:textColor="#FFFFFF"
    		android:layout_centerVertical="true"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentLeft ="true"
    		android:id="@+id/patientBack" />      
	    <Button 
	    	android:background="@drawable/common_titlebar_common_btn_normal" 
	    	android:layout_marginRight="8.0dip" 
	    	android:text="保存" 
	    	android:textSize="17.0dip"
	    	android:textColor="#FFFFFF"
	    	android:layout_centerVertical="true"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentRight="true"
	    	android:id="@+id/patientSave" />
  	 </RelativeLayout>
<ScrollView
         android:id="@+id/ScrollView"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:fadingEdge="none"
         xmlns:android="http://schemas.android.com/apk/res/android">	
  <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:orientation="vertical">	
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
        	android:paddingLeft="10dp">
			<ImageView
				android:id="@+id/headPic"
		    	android:layout_width="80dp" 
		    	android:layout_height="80dp" 
		    	android:src="@drawable/default_head_pic"				
			/>
			<LinearLayout
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:paddingLeft="9dp"
        		android:paddingRight="9dp"
        		android:orientation="vertical">
        		<LinearLayout
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content">
		          	<TextView  
				    	android:layout_width="wrap_content" 
				    	android:layout_height="wrap_content" 
				    	android:textColor="@color/black"
						android:text="患者姓名:"
				    />
					<TextView  
				    	android:layout_width="wrap_content" 
				    	android:layout_height="wrap_content" 
				    	android:textColor="@color/red"
						android:text="*"/>		
		          	<EditText  
		          		android:id="@+id/patientName"
				    	android:layout_width="fill_parent" 
				    	android:layout_height="40dp" 
				    	android:singleLine="true"
				    />

			    </LinearLayout>
        		<LinearLayout
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content">
		          	<TextView  
				    	android:layout_width="wrap_content" 
				    	android:layout_height="wrap_content" 
				    	android:textColor="@color/black"
						android:text="联系电话:"
				    />	
				  	<TextView  
				    	android:layout_width="wrap_content" 
				    	android:layout_height="wrap_content" 
				    	android:textColor="@color/red"
						android:text="*"/>	
		          	<EditText  
		          		android:id="@+id/patientPhone"
				    	android:layout_width="fill_parent" 
				    	android:layout_height="40dp" 
				    	android:singleLine="true"
				    />
			    </LinearLayout>
		    </LinearLayout>
		 </LinearLayout>	
	<LinearLayout
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
	  	android:layout_marginTop="9dp"
        android:background="@drawable/about_content_top">
       </LinearLayout>
    <LinearLayout
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:orientation="vertical"
  		android:layout_marginLeft="9dp"
       	android:layout_marginRight="9dp"
        android:background="@drawable/about_content_middle">
		<LinearLayout
	 		android:layout_width="fill_parent"
	 		android:layout_marginLeft="9dp"
	        android:layout_marginRight="9dp"
	        android:focusable="true"  
	 		android:focusableInTouchMode="true"  
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical">
	        <LinearLayout	
	        	android:layout_width="fill_parent"  
	        	android:layout_height="wrap_content"
	        	android:layout_weight="3">    			    					  						   	             	
				<TextView  
		   			android:layout_width="wrap_content" 
		   			android:layout_height="wrap_content" 
		   			android:textColor="@color/black"
					android:text="出生日期:"/>	
			</LinearLayout>		
	        <LinearLayout	
	        	android:layout_width="fill_parent"  
	        	android:layout_height="wrap_content"
	        	android:layout_weight="1">		
				<EditText
					android:id="@+id/patientBirth"
					android:layout_width="fill_parent"
					android:layout_height="40dp"
					android:singleLine="true"/> 
      		</LinearLayout>	    					  						   	             	
    	</LinearLayout>	
        <LinearLayout
	 		android:layout_width="fill_parent"
	 		android:layout_marginLeft="9dp"
	        android:layout_marginRight="9dp"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical">	
          <LinearLayout
	 		android:layout_width="fill_parent"	
	 		android:layout_height="wrap_content"
	 		android:layout_weight="1">        			    					  						   	             	
		 <TextView  
   			android:layout_width="wrap_content" 
   			android:layout_height="wrap_content" 
   			android:textColor="@color/black"
			android:text="性别:"/>
		<Spinner 
			android:id="@+id/patientSexySpinner"   
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
    	</LinearLayout>
    	<LinearLayout
	 		android:layout_width="fill_parent"	
	 		android:layout_height="wrap_content"
	 		android:layout_weight="1">    
		 <TextView  
   			android:layout_width="wrap_content" 
   			android:layout_height="wrap_content" 
   			android:textColor="@color/black"
			android:text="年龄:"/>	
    	<EditText  
       		android:id="@+id/patientAge"
	    	android:layout_width="fill_parent" 
    		android:layout_height="40dp"
    		android:singleLine="true"  />
    	</LinearLayout>
    	</LinearLayout>
        <LinearLayout
	 		android:layout_width="fill_parent"
	 		android:layout_marginLeft="9dp"
	        android:layout_marginRight="9dp"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical">	      			    					  						   	             	
			<LinearLayout	
	        	android:layout_width="fill_parent"  
	        	android:layout_height="wrap_content"
	        	android:layout_weight="3"> 		 
				 <TextView  
		   			android:layout_width="wrap_content" 
		   			android:layout_height="wrap_content" 
		   			android:textColor="@color/black"
					android:text="健康号:"/>	
			</LinearLayout>
			<LinearLayout	
	        	android:layout_width="fill_parent"  
	        	android:layout_height="wrap_content"
	        	android:layout_weight="1"> 
				<EditText
					android:id="@+id/patientHelthyNo"
					android:layout_width="fill_parent"
					android:layout_height="40dp"
					android:singleLine="true"/>
			</LinearLayout>
    	</LinearLayout>	
        <LinearLayout
	 		android:layout_width="fill_parent"
	 		android:layout_marginLeft="9dp"
	        android:layout_marginRight="9dp"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical">
	      	<LinearLayout	
	        	android:layout_width="fill_parent"  
	        	android:layout_height="wrap_content"
	        	android:layout_weight="3">     			    					  						   	             	
				 <TextView  
		   			android:layout_width="wrap_content" 
		   			android:layout_height="wrap_content" 
		   			android:textColor="@color/black"
					android:text="应急联系人:"/>
			</LinearLayout>
			<LinearLayout	
	        	android:layout_width="fill_parent"  
	        	android:layout_height="wrap_content"
	        	android:layout_weight="1"> 	
				<EditText
					android:id="@+id/emergencyPersonh"
					android:layout_width="fill_parent"
					android:layout_height="40dp"
					android:singleLine="true"/>
			</LinearLayout>     			    					  						   	             	
    	</LinearLayout>
        <LinearLayout
	 		android:layout_width="fill_parent"
	 		android:layout_marginLeft="9dp"
	        android:layout_marginRight="9dp"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical">	    			    					  						   	             	  			    					  						   	             	
			<LinearLayout	
	        	android:layout_width="fill_parent"  
	        	android:layout_height="wrap_content"
	        	android:layout_weight="3"> 
				 <TextView  
		   			android:layout_width="wrap_content" 
		   			android:layout_height="wrap_content" 
		   			android:textColor="@color/black"
					android:text="应急电话:"/>
			</LinearLayout>
			<LinearLayout	
	        	android:layout_width="fill_parent"  
	        	android:layout_height="wrap_content"
	        	android:layout_weight="1"> 	
				<EditText
					android:id="@+id/emergencyPhone"
					android:layout_width="fill_parent"
					android:layout_height="40dp"
					android:singleLine="true"/>
			</LinearLayout>
    	</LinearLayout>
 		<LinearLayout
	 		android:layout_width="fill_parent"
	 		android:layout_marginLeft="9dp"
	        android:layout_marginRight="9dp"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical">	
	     	<LinearLayout	
	        	android:layout_width="fill_parent"  
	        	android:layout_height="wrap_content"
	        	android:layout_weight="3"> 		    					  						   	             	
				 <TextView  
		   			android:layout_width="wrap_content" 
		   			android:layout_height="wrap_content" 
		   			android:textColor="@color/black"
					android:text="地址:"/>
			</LinearLayout>
			<LinearLayout	
	        	android:layout_width="fill_parent"  
	        	android:layout_height="wrap_content"
	        	android:layout_weight="1"> 	
		    	<EditText  
		       		android:id="@+id/patientAddress"
			    	android:layout_width="fill_parent" 
		    		android:layout_height="40dp"
		    		android:singleLine="true"  />
		    </LinearLayout>
    	</LinearLayout>	
 		<LinearLayout
	 		android:layout_width="fill_parent"
	 		android:layout_marginLeft="9dp"
	        android:layout_marginRight="9dp"
	        android:orientation="vertical"
	        android:layout_height="wrap_content">				    					  						   	             	
		 <TextView  
   			android:layout_width="wrap_content" 
   			android:layout_height="wrap_content" 
   			android:textColor="@color/black"
			android:text="特殊情况说明:"/>	
    	<EditText  
       		android:id="@+id/patientRemark"
	    	android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:lines="3" />
    	</LinearLayout>	
    </LinearLayout>
    <LinearLayout
 		android:layout_width="fill_parent"
 		android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_height="wrap_content"
        android:background="@drawable/about_content_bottom">
     </LinearLayout>
     
    <LinearLayout
 		android:layout_width="fill_parent"
 		android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="9dp"
        android:layout_height="wrap_content">
	     <LinearLayout
	 		android:layout_width="wrap_content" 
	 		android:layout_height="wrap_content"
	 		android:layout_weight="1">
	 		<Button   	
	    		android:id="@+id/addMedical"
	    		android:layout_width="fill_parent"
	     		android:layout_height="wrap_content"
	     		android:background="@drawable/add_button_normal"
	     		android:textSize="16dp"
	    		android:text="增加病历"
	    		android:layout_marginRight="4dp"/>
	 	</LinearLayout> 
	     <LinearLayout
	 		android:layout_width="wrap_content" 
	 		android:layout_height="wrap_content"
	 		android:layout_weight="1">
	 		<Button   	
	    		android:id="@+id/addAgain"
	    		android:layout_width="fill_parent"
	     		android:layout_height="wrap_content"
	     		android:background="@drawable/add_button_normal"
	     		android:textSize="16dp"
	     		android:fadingEdge="none"
	    		android:text="再记一笔"
	    		android:layout_marginLeft="4dp"/>
	 	</LinearLayout>   	
     </LinearLayout>
   <LinearLayout
     	android:layout_width="fill_parent"
     	android:layout_height="wrap_content"
     	android:background="@drawable/home_middle"
    	android:layout_marginTop="9dp">
        	<TextView
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="center_vertical"
        		android:textColor="@color/black"
        		android:textSize="16dp"
        		android:text="病历列表："/>  
   </LinearLayout>
   <LinearLayout
   		android:id="@+id/medicalListLinear"
   		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"> 
   <ListView 
		android:id="@+id/medicalListView"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:fadingEdge="none"
		/>
	</LinearLayout>
   </LinearLayout>
</ScrollView>
</LinearLayout>
