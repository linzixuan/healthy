<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroud"
    >
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_header_bg2">
        <Button
        	android:id="@+id/doctorAdviceBack"
       		android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_marginLeft="10dp"
       		android:layout_centerVertical="true"
       		android:layout_alignParentLeft ="true"
       		android:text="返回" 
       		android:textSize="17.0dip"
       		android:textColor="#FFFFFF"
       		android:background="@drawable/common_titlebar_back_btn_normal"/>
        <Button
        	android:id="@+id/doctorAdviceNew"
       		android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_marginRight="10dp"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
       		android:text="添加" 
       		android:textSize="17.0dip"
       		android:textColor="#FFFFFF"
       		android:background="@drawable/common_titlebar_common_btn_normal"/>
     </RelativeLayout>
	<LinearLayout  
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@drawable/common_middle_normal">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:layout_marginLeft="9dp"
			android:textColor="@color/black"
			android:text="按病种："/>
		<Spinner 
			android:id="@+id/doctorAdviceSpinner"   
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content"></Spinner>
		</LinearLayout>
	
	<ListView 
		android:id="@+id/doctorAdviceList"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:fadingEdge="none"
		>
	</ListView>
  </LinearLayout>
