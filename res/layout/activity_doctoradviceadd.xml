<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroud"
    >
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_header_bg2">
        <Button
        	android:id="@+id/doctorAdviceAddBack"
       		android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_marginLeft="10dp"
       		android:layout_centerVertical="true"
       		android:layout_alignParentLeft ="true"
       		android:text="返回" 
       		android:textSize="17.0dip"
       		android:textColor="#FFFFFF"
       		android:background="@drawable/common_titlebar_back_btn_normal"/>
        <Button
        	android:id="@+id/doctorAdviceSave"
       		android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_marginRight="10dp"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
       		android:text="保存" 
       		android:textSize="17.0dip"
       		android:textColor="#FFFFFF"
       		android:background="@drawable/common_titlebar_common_btn_normal"/>
     </RelativeLayout>
<LinearLayout  
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="所属病种："/>
	<Spinner 
		android:id="@+id/doctorAdviceAddPinner"   
		android:layout_width="fill_parent"  
		android:layout_height="wrap_content"></Spinner>
	</LinearLayout>
<LinearLayout  
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:layout_marginLeft="9dip" 
	android:layout_marginTop="9dp">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="内容："/>
	<EditText 
		android:id="@+id/textName"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:lines="10">
		</EditText>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/red"
		android:text="*"></TextView>
	</LinearLayout>
  </LinearLayout>
