<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="@drawable/backgroud">
  
 <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/home_header_bg2">
        <TextView
       	 	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="@color/black"
        	android:layout_centerInParent="true"
        	android:textSize="18dp"
        	android:text="患者信息"
        	/> 
        <!-- 
        <Button
        	android:id="@+id/patientAddBtn"
       		android:layout_width="30dp" 
		    android:layout_height="30dp" 
		    android:layout_marginLeft="10dp"
       		android:layout_centerVertical="true"
       		android:layout_alignParentLeft ="true"
       		android:background="@drawable/icon_patient_add_normal"/> --> 
   </RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center_vertical" 
	android:orientation="horizontal"
	android:background="@drawable/common_middle_normal" 
	android:paddingLeft="5.0dip"
	android:paddingRight="5.0dip" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<AutoCompleteTextView android:id="@+id/patientSearchText"
		android:background="@drawable/search_edit_style"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:singleLine="true" 
		android:completionThreshold="1"
		android:hint="姓名、电话"
		android:layout_weight="1.0">
	</AutoCompleteTextView>
	<Button android:id="@+id/searchBtn" 
	    android:background="@drawable/search_button_style"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</Button>
</LinearLayout>
	<ExpandableListView
		android:id = "@+id/expandableListView"
		android:layout_width = "fill_parent"
		android:layout_height = "fill_parent"
		android:groupIndicator="@null"
		android:fadingEdge="none"
		android:drawSelectorOnTop = "false"/> 
</LinearLayout>
