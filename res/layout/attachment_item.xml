<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation = "horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/common_list">
	<LinearLayout
		android:layout_width="fill_parent"
	 	android:layout_height="fill_parent"
	 	android:layout_weight="2"
	 	android:gravity="center">
	 	<ImageView
	 		android:id="@+id/attachmentPic" 
	 		android:src="@drawable/default_head_pic"
	 		android:scaleType="centerInside"
	 		android:layout_width="40dp"
	 		android:layout_height="40dp"/>	
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
	 	android:layout_height="fill_parent"
	 	android:layout_weight="1"
	 	android:gravity="center_vertical">	
	 	<EditText
	 		android:id="@+id/attachmentName" 
	 		android:layout_width="fill_parent"
	 		android:layout_height="wrap_content"
	 		android:background="@null"
	 		android:singleLine="true"
	 		android:hint="名称"/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
	 	android:layout_height="fill_parent"
	 	android:layout_weight="2"
	 	android:gravity="center">	
	 	<ImageView 
	 		android:id="@+id/attachment2Big" 
	 		android:src="@drawable/icon_medical_c"
	 		android:layout_width="wrap_content"
	 		android:layout_height="wrap_content"/>		 	
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
	 	android:layout_height="fill_parent"
	 	android:layout_weight="2"
	 	android:gravity="center">	
	 	<ImageView 
	 		android:id="@+id/attachmentDelete" 
	 		android:src="@drawable/delete_att"
	 		android:layout_width="wrap_content"
	 		android:layout_height="wrap_content"/>		 	
	</LinearLayout>
</LinearLayout>
